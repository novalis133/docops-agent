# DocOps Agent Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=DocOps Agent
DEBUG=false
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Settings
STREAMLIT_PORT=8501

# ============================================
# Elasticsearch Configuration
# ============================================

# Local Elasticsearch (default)
ES_HOST=localhost
ES_PORT=9200
ES_SCHEME=http

# Authentication (optional for local dev)
# ES_USERNAME=elastic
# ES_PASSWORD=your_password

# API Key authentication (alternative to username/password)
# ES_API_KEY=your_api_key

# Elastic Cloud (for production)
# ES_CLOUD_ID=your_cloud_id

# SSL Settings
ES_VERIFY_CERTS=true
# ES_CA_CERTS=/path/to/ca.crt

# Index Names
ES_DOCUMENTS_INDEX=docops-documents
ES_CHUNKS_INDEX=docops-chunks
ES_ALERTS_INDEX=docops-alerts

# ============================================
# Embedding Configuration
# ============================================

# Provider: sentence-transformers (local) or gradient (DigitalOcean)
EMBEDDING_PROVIDER=sentence-transformers

# Model name
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Embedding dimension (must match model output)
EMBEDDING_DIMENSION=384

# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=32

# ============================================
# DigitalOcean Gradient AI Configuration
# ============================================
# Required if using gradient as embedding provider or for fine-tuning

# GRADIENT_API_KEY=your_gradient_api_key
# GRADIENT_WORKSPACE_ID=your_workspace_id
# GRADIENT_BASE_URL=https://api.gradient.ai/api
# GRADIENT_EMBEDDING_MODEL=bge-large

# Custom inference endpoint (after model deployment)
# GRADIENT_INFERENCE_ENDPOINT=https://your-endpoint.gradient.ai/v1/completions

# ============================================
# Chunking Configuration
# ============================================

CHUNK_MAX_CHUNK_SIZE=1000
CHUNK_MIN_CHUNK_SIZE=100
CHUNK_OVERLAP=100
CHUNK_RESPECT_SECTIONS=true

# ============================================
# LLM Configuration (for agent reasoning)
# ============================================

# OpenAI (if using GPT models)
# OPENAI_API_KEY=sk-your_openai_key

# Anthropic (if using Claude)
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# ============================================
# Hackathon Submission Settings
# ============================================

# For Elasticsearch Agent Builder Hackathon
# ELASTIC_AGENT_ENABLED=true

# For DigitalOcean Gradient AI Hackathon
# GRADIENT_TRAINING_ENABLED=true
